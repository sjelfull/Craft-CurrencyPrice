{% import "_includes/forms" as forms %}

{% for currency,enabled in enabledCurrencies %}
    {% set value = values.price[currency] is defined ? values.price[currency] : 0 %}

    {{ forms.textField({
        label: currency,
        id: id ~ 'price-' ~ currency,
        class: 'nicetext',
        name: name ~ '[price]' ~ '[' ~ currency ~ ']',
        value: value,
        required: false,
    }) }}
{% endfor %}
